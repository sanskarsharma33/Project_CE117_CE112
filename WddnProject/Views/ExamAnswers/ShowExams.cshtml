@model IList<WDDNProject.Models.Exam>

@{
    ViewData["Title"] = "TakeExam";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@if (Model.Count != 0)
{
<div class="row">
    <div class="col-md-4">
        <table class="table">
            <thead>
                <tr>
                    <th>
                        Subject
                    </th>
                    <th>
                        Description
                    </th>
                    <th>
                        StartTime
                    </th>
                    <th>
                        EndTime
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Subject)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.StartTime)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.EndTime)
                        </td>
                        <td>
                            <a asp-action="TakeExam" asp-route-id="@item.id">TakeExam</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>
}
@if(Model.Count==0) { 
    <Center><h1>No Due Exams</h1></Center>
}