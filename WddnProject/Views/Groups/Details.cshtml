@model WDDNProject.Models.Group

@{ ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml"; }

<h1>Details</h1>

<div>
    <center><h2>Group</h2></center>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AppUser)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AppUser.FirstName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.GroupMember)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.GroupMember.Name)
        </dd>
    </dl>
</div>
<br />
<br />
<center><h2>All Members</h2></center>
<hr />
<table class="table">
    <thead>
        <tr>
            <th>
                Index
            </th>
            <th>
                First Name
            </th>
            <th>
                Last Name
            </th>
            <th>
                Email
            </th>
        </tr>
    </thead>
    <tbody>
       @{ 
           int counter = 0;
           @foreach (var item in Model.GroupMember.AppUserGroupMembers)
            {
               counter++;
                <tr>
                    <td>
                        @counter
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AppUser.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AppUser.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AppUser.Email)
                    </td>
                    <td>
                        <a href="~/AppUserGroupMembers/Delete?appUserId=@item.AppUserId&groupMemberId=@Model.GroupMemberId">Delete</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
<br />
<br />
<a class="btn btn-primary" href="~/AppUserGroupMembers/Create?groupMemberId=@Model.GroupMemberId">Add Student</a>
<br />
<br />
<div>
    <a asp-action="Edit" asp-route-id="@Model.id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
