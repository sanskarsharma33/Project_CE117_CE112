@model WDDNProject.Models.GroupMember

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>
<br />
<div>
        
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Group)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Group.Name)
        </dd>
    </dl>
</div>

<br />
<br />
<center><h2>All Members</h2></center>
<hr />
<table class="table">
    <thead>
        <tr>
            <th>
                Index
            </th>
            <th>
                First Name
            </th>
            <th>
                Last Name
            </th>
            <th>
                Email
            </th>
        </tr>
    </thead>
    <tbody>
        @{ 
            int count = 0;
            @foreach (var item in Model.AppUserGroupMembers)
            {
                count++;
                <tr>
                    <td>
                        @count
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AppUser.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AppUser.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AppUser.Email)
                    </td>
                    <td>
                        <a href="~/AppUserGroupMembers/Delete?appUserId=@item.AppUserId&groupMemberId=@Model.id">Remove</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
<br />
<br />
<a class="btn btn-primary" href="~/AppUserGroupMembers/Create?groupMemberId=@Model.id">Add Student</a>
<br />
<br />
<div>
    <a asp-action="Edit" asp-route-id="@Model.id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
